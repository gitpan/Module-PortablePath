%description
See README

%prep

%build
tar -xzf *.tar.gz
cd Module-PortablePath*
perl Build.PL
./Build --prefix=$RPM_BUILD_ROOT/usr

%install
cd Module-PortablePath*
./Build install --prefix=$RPM_BUILD_ROOT/usr
find $RPM_BUILD_ROOT -type f | sed "s|$RPM_BUILD_ROOT||g" > ../rpmbuild.manifest

%files -f rpmbuild.manifest
%defattr(-,root,root)
